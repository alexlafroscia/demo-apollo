<div class="jumbotron">
  <input
    class="display-4 mb-2"
    value={{bufferedName}}
    onChange={{action 'updateName'}}
  />
  <p class="lead">{{person.job.title}}</p>
</div>

<h2>Friends</h2>

<ul>
  {{#each person.friends as |friend|}}
    <li>
      {{#link-to 'people.person' friend.id}}
        {{friend.name}}
      {{/link-to}}
    </li>
  {{/each}}
</ul>